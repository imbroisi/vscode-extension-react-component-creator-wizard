{
	"compilerOptions": {
		"module": "Node16",
		"target": "ES2022",
		"outDir": "out",
		"lib": [
			"ES2022"
		],
		"types": ["node", "jest"],
		"jsx": "react",
		"sourceMap": true,
		"rootDir": "src",
		"strict": true   /* enable all strict type-checking options */
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": ["node_modules"]
}
