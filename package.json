{
  "name": "vscode-extension-react-component-structure",
  "displayName": "vscode-extension-react-component-structure",
  "description": "Create folder and files structure for React component",
  "version": "0.0.1-beta",
  "engines": {
    "vscode": "^1.91.0"
  },
  "author": {
    "name": "Luiz Imbroisi - Ender",
    "email": "ender.imbroisi@gmail.com"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.createReactComponent",
        "title": "Create Component Structure"
      },
      {
        "command": "extension.createReactComponentSetup",
        "title": "Setup Component Structure..."
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.createReactComponent",
          "when": "explorerResourceIsFolder",
          "group": "createReactComponentGroup"
        },
        {
          "command": "extension.createReactComponentSetup",
          "when": "explorerResourceIsFolder",
          "group": "createReactComponentGroup"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.91.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.1.4",
    "typescript": "^5.4.5"
  }
}
